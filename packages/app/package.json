{
  "name": "@proof-flow/app",
  "displayName": "ProofFlow",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:lean",
    "onCommand:proof-flow.hello",
    "onCommand:proof-flow.lineageDiffReport"
  ],
  "contributes": {
    "configuration": {
      "title": "ProofFlow",
      "properties": {
        "proofFlow.schemaPath": {
          "type": "string",
          "default": "",
          "description": "Optional absolute path, URI, or workspace-relative path to override domain.mel loading."
        }
      }
    },
    "commands": [
      {
        "command": "proof-flow.hello",
        "title": "ProofFlow: Toggle Panel"
      },
      {
        "command": "proof-flow.lineageDiffReport",
        "title": "ProofFlow: Lineage Diff Report"
      }
    ]
  },
  "scripts": {
    "build:webview": "vite build --config webview/vite.config.ts",
    "build": "pnpm run build:webview && tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p webview/tsconfig.json --noEmit"
  },
  "dependencies": {
    "@manifesto-ai/sdk": "^1.2.0",
    "@proof-flow/host": "workspace:*",
    "@proof-flow/schema": "workspace:*"
  },
  "devDependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/vscode": "^1.90.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@xyflow/react": "^12.9.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.20"
  }
}
