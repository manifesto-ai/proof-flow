{
  "name": "@proof-flow/app",
  "displayName": "ProofFlow",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:lean",
    "onCommand:proof-flow.hello",
    "onCommand:proof-flow.patternsReset",
    "onCommand:proof-flow.suggestTactics",
    "onCommand:proof-flow.goalCoverageReport",
    "onCommand:proof-flow.goalCoverageSnapshot",
    "onCommand:proof-flow.performanceReport",
    "onCommand:proof-flow.performanceSnapshot"
  ],
  "contributes": {
    "configuration": {
      "title": "ProofFlow",
      "properties": {
        "proofFlow.schemaPath": {
          "type": "string",
          "default": "",
          "description": "Optional absolute path, URI, or workspace-relative path to override domain.mel loading."
        }
      }
    },
    "commands": [
      {
        "command": "proof-flow.hello",
        "title": "ProofFlow: Toggle Panel"
      },
      {
        "command": "proof-flow.patternsReset",
        "title": "ProofFlow: Reset Patterns"
      },
      {
        "command": "proof-flow.suggestTactics",
        "title": "ProofFlow: Suggest Tactics"
      },
      {
        "command": "proof-flow.goalCoverageReport",
        "title": "ProofFlow: Goal Coverage Report"
      },
      {
        "command": "proof-flow.goalCoverageSnapshot",
        "title": "ProofFlow: Goal Coverage Snapshot (Debug)"
      },
      {
        "command": "proof-flow.performanceReport",
        "title": "ProofFlow: Performance Report"
      },
      {
        "command": "proof-flow.performanceSnapshot",
        "title": "ProofFlow: Performance Snapshot (Debug)"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@manifesto-ai/app": "^2.2.0",
    "@proof-flow/host": "workspace:*",
    "@proof-flow/schema": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.90.0"
  }
}
